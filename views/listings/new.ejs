<% layout("layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
    <h1>Create new listing:</h1>
    <br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter title of your business"  class="form-control" id="title" required >
    <div class="invalid-feedback">
            Title is required.
          </div> 
    </div>
    
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="enter description" rows="4" cols="50" class="form-control" id="description" required ></textarea>
        <div class="invalid-feedback">
        Please add short description.
          </div>
    </div>
    
    <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input name="listing[image]" type="file" class="form-control" id="image" required>
        <div class="invalid-feedback">
            Please enter image of your business.
          </div>
    </div>
    
<div class="row">
    <div class="mb-3 col-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="1200" class="form-control" id="price" type="number" required >
        <div class="invalid-feedback">
            Price is required.
          </div>
    </div>

    <div class="mb-3 col-8">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="Pokhara" class="form-control"  id="location" required >
        <div class="invalid-feedback">
            Location is required.
          </div>
    </div>
</div>

    <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="Nepal" class="form-control" id="country" required >
        <div class="invalid-feedback">
            Country is required.
          </div>
    </div> 

        <button class="btn btn-primary" type="submit">Add</button>
        
    </form> 
</div>
</div> 
<script src="/js/formValidation.js"></script> 